    <!-- ═══════════════════════════════════════════════════════════════════════════════
         CAPA JAVASCRIPT: NÚCLEO DEL IMPERIO
         Motor de física, estados reactivos y lógica matemática
    ═══════════════════════════════════════════════════════════════════════════════ -->
    <script>
    /**
     * ╔═══════════════════════════════════════════════════════════════════════════════╗
     * ║                    JYC IMPERIO - NÚCLEO v60.0                                 ║
     * ║                    Sistema de Control Unificado                               ║
     * ╚═══════════════════════════════════════════════════════════════════════════════╝
     */

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 1: CONSTANTES MATEMÁTICAS Y FÍSICAS
    // ═══════════════════════════════════════════════════════════════════════════════
    const PHYSICS = {
        PHI: 1.618033988749895,           // Proporción áurea
        PHI_INV: 0.618033988749895,       // Inverso de φ
        E: 2.71828182845,                 // Número de Euler
        SQRT2: 1.41421356237,             // Raíz de 2
        FRICTION: 0.92,                   // Coeficiente de fricción
        SPRING_TENSION: 0.3,              // Tensión del resorte
        SPRING_DAMPING: 0.8,              // Amortiguamiento
    };

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 2: SISTEMA DE ESTADO REACTIVO
    // Patrón Observer con propagación automática
    // ═══════════════════════════════════════════════════════════════════════════════
    class ReactiveState {
        constructor(initialState) {
            this._state = initialState;
            this._subscribers = new Map();
            this._id = 0;
        }

        get state() {
            return this._state;
        }

        set(key, value) {
            const oldValue = this._state[key];
            this._state[key] = value;
            this._notify(key, value, oldValue);
        }

        get(key) {
            return this._state[key];
        }

        subscribe(key, callback) {
            const id = ++this._id;
            if (!this._subscribers.has(key)) {
                this._subscribers.set(key, new Map());
            }
            this._subscribers.get(key).set(id, callback);
            return () => this._subscribers.get(key).delete(id);
        }

        _notify(key, value, oldValue) {
            if (this._subscribers.has(key)) {
                this._subscribers.get(key).forEach(callback => {
                    callback(value, oldValue);
                });
            }
        }
    }

    // Estado global del Imperio
    const Empire = new ReactiveState({
        authenticated: false,
        cart: [],
        products: [],
        currentFilter: 'all',
        cartOpen: false,
        notifications: [],
        user: null
    });

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 3: MOTOR DE ANIMACIÓN FÍSICA
    // Basado en física de resortes y ecuaciones de movimiento
    // ═══════════════════════════════════════════════════════════════════════════════
    class PhysicsEngine {
        static spring(current, target, velocity = 0) {
            const distance = target - current;
            const acceleration = distance * PHYSICS.SPRING_TENSION;
            const newVelocity = (velocity + acceleration) * PHYSICS.SPRING_DAMPING;
            const newPosition = current + newVelocity;

            return {
                position: newPosition,
                velocity: newVelocity,
                done: Math.abs(distance) < 0.01 && Math.abs(newVelocity) < 0.01
            };
        }

        static easeOutExpo(t) {
            return t === 1 ? 1 : 1 - Math.pow(2, -10 * t);
        }

        static easeOutQuint(t) {
            return 1 - Math.pow(1 - t, 5);
        }

        static easeInOutExpo(t) {
            return t === 0 ? 0 : t === 1 ? 1 : t < 0.5
                ? Math.pow(2, 20 * t - 10) / 2
                : (2 - Math.pow(2, -20 * t + 10)) / 2;
        }

        static lerp(start, end, factor) {
            return start + (end - start) * factor;
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 4: SISTEMA DE PARTÍCULAS
    // Generación procedural basada en distribución matemática
    // ═══════════════════════════════════════════════════════════════════════════════
    class ParticleSystem {
        constructor(container, count = 15) {
            this.container = container;
            this.particles = [];
            this.init(count);
        }

        init(count) {
            for (let i = 0; i < count; i++) {
                this.createParticle(i, count);
            }
        }

        createParticle(index, total) {
            const particle = document.createElement('div');
            particle.className = 'particle';

            // Distribución basada en proporción áurea
            const goldenAngle = Math.PI * (3 - Math.sqrt(5));
            const theta = index * goldenAngle;
            const radius = Math.sqrt(index / total);

            particle.style.left = `${50 + radius * Math.cos(theta) * 40}%`;
            particle.style.animationDelay = `${(index / total) * 20}s`;
            particle.style.animationDuration = `${15 + Math.random() * 10}s`;

            this.container.appendChild(particle);
            this.particles.push(particle);
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 5: DATOS DEL CATÁLOGO
    // Estructura de productos del Imperio
    // ═══════════════════════════════════════════════════════════════════════════════
    const CATALOG = [
        {
            id: 1,
            name: "Camiseta Imperial",
            category: "Ropa",
            price: 59.99,
            originalPrice: 79.99,
            emoji: "👕",
            badge: "Nuevo",
            discount: 25
        },
        {
            id: 2,
            name: "Zapatillas Élite",
            category: "Calzado",
            price: 189.99,
            originalPrice: 249.99,
            emoji: "👟",
            badge: null,
            discount: 24
        },
        {
            id: 3,
            name: "Chronos Watch",
            category: "Accesorios",
            price: 299.99,
            originalPrice: 399.99,
            emoji: "⌚",
            badge: "Premium",
            discount: 25
        },
        {
            id: 4,
            name: "Mochila Vanguard",
            category: "Accesorios",
            price: 89.99,
            originalPrice: 119.99,
            emoji: "🎒",
            badge: null,
            discount: 25
        },
        {
            id: 5,
            name: "Auriculares Phantom",
            category: "Tecnología",
            price: 179.99,
            originalPrice: 229.99,
            emoji: "🎧",
            badge: "Top",
            discount: 22
        },
        {
            id: 6,
            name: "Lentes Sovereign",
            category: "Accesorios",
            price: 149.99,
            originalPrice: 199.99,
            emoji: "🕶️",
            badge: null,
            discount: 25
        },
        {
            id: 7,
            name: "Sudadera Monarch",
            category: "Ropa",
            price: 99.99,
            originalPrice: 129.99,
            emoji: "🧥",
            badge: "Exclusivo",
            discount: 23
        },
        {
            id: 8,
            name: "Termo Dynasty",
            category: "Hogar",
            price: 49.99,
            originalPrice: 69.99,
            emoji: "🍶",
            badge: null,
            discount: 29
        },
        {
            id: 9,
            name: "Tablet Apex Pro",
            category: "Tecnología",
            price: 799.99,
            originalPrice: 999.99,
            emoji: "📱",
            badge: "Nuevo",
            discount: 20
        },
        {
            id: 10,
            name: "Cinturón Heritage",
            category: "Accesorios",
            price: 79.99,
            originalPrice: 99.99,
            emoji: "👔",
            badge: null,
            discount: 20
        }
    ];

    // Inicializar productos en el estado
    Empire.set('products', CATALOG);

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 6: SISTEMA DE RENDERIZADO
    // Renderizado declarativo con optimización de DOM
    // ═══════════════════════════════════════════════════════════════════════════════
    const Renderer = {
        products(filter = 'all') {
            const container = document.getElementById('productsMatrix');
            const products = Empire.get('products');

            const filtered = filter === 'all'
                ? products
                : products.filter(p => p.category === filter);

            container.innerHTML = filtered.map((product, index) => `
                <article class="product-cell animate-in delay-${index % 4 + 1}" data-id="${product.id}">
                    <div class="product-visual">
                        ${product.badge ? `<span class="product-badge">${product.badge}</span>` : ''}
                        <button class="product-wishlist" onclick="toggleWishlist(${product.id})">
                            <svg class="icon-sm" viewBox="0 0 24 24">
                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                            </svg>
                        </button>
                        <span class="product-emoji">${product.emoji}</span>
                    </div>
                    <div class="product-data">
                        <span class="product-category">${product.category}</span>
                        <h3 class="product-name">${product.name}</h3>
                        <div class="product-pricing">
                            <span class="price-current">$${product.price.toFixed(2)}</span>
                            <span class="price-original">$${product.originalPrice.toFixed(2)}</span>
                            <span class="price-discount">-${product.discount}%</span>
                        </div>
                        <div class="product-actions">
                            <button class="btn-add-cart" onclick="addToCart(${product.id})">
                                Añadir al Carrito
                            </button>
                            <button class="btn-quick-view" onclick="quickView(${product.id})">
                                <svg class="icon-sm" viewBox="0 0 24 24">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </article>
            `).join('');
        },

        cart() {
            const cart = Empire.get('cart');
            const cartBody = document.getElementById('cartBody');
            const cartFooter = document.getElementById('cartFooter');
            const cartBadge = document.getElementById('cartBadge');
            const cartCountLabel = document.getElementById('cartCountLabel');

            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            const totalPrice = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

            cartBadge.textContent = totalItems;
            cartCountLabel.textContent = `(${totalItems} item${totalItems !== 1 ? 's' : ''})`;

            if (cart.length === 0) {
                cartBody.innerHTML = `
                    <div class="cart-empty">
                        <div class="cart-empty-icon">🛒</div>
                        <p class="cart-empty-text">Tu carrito está vacío</p>
                        <p class="cart-empty-subtext">Explora nuestro catálogo y encuentra algo especial</p>
                    </div>
                `;
                cartFooter.style.display = 'none';
            } else {
                cartBody.innerHTML = cart.map(item => `
                    <div class="cart-item">
                        <div class="cart-item-visual">${item.emoji}</div>
                        <div class="cart-item-info">
                            <p class="cart-item-name">${item.name}</p>
                            <p class="cart-item-price">$${item.price.toFixed(2)}</p>
                        </div>
                        <div class="cart-item-actions">
                            <button class="cart-item-remove" onclick="removeFromCart(${item.id})">
                                <svg class="icon-sm" viewBox="0 0 24 24">
                                    <line x1="18" y1="6" x2="6" y2="18"/>
                                    <line x1="6" y1="6" x2="18" y2="18"/>
                                </svg>
                            </button>
                            <div class="cart-item-quantity">
                                <button class="qty-btn" onclick="updateQuantity(${item.id}, -1)">−</button>
                                <span class="qty-value">${item.quantity}</span>
                                <button class="qty-btn" onclick="updateQuantity(${item.id}, 1)">+</button>
                            </div>
                        </div>
                    </div>
                `).join('');

                document.getElementById('subtotalValue').textContent = `$${totalPrice.toFixed(2)}`;
                document.getElementById('totalValue').textContent = `$${totalPrice.toFixed(2)}`;
                cartFooter.style.display = 'block';
            }
        }
    };

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 7: CONTROLADORES DE EVENTOS
    // Funciones de interacción del usuario
    // ═══════════════════════════════════════════════════════════════════════════════

    function handleAuth(event) {
        event.preventDefault();

        const authDimension = document.getElementById('authDimension');
        const mainRealm = document.getElementById('mainRealm');

        // Animación de transcendencia
        authDimension.classList.add('transcended');

        setTimeout(() => {
            mainRealm.classList.add('awakened');
            Empire.set('authenticated', true);

            // Mostrar notificación de bienvenida
            showNotification('Bienvenido al Imperio', 'Sesión iniciada correctamente');
        }, 400);

        return false;
    }

    function toggleCart() {
        const cartDimension = document.getElementById('cartDimension');
        const cartOverlay = document.getElementById('cartOverlay');
        const isOpen = cartDimension.classList.contains('manifested');

        if (isOpen) {
            cartDimension.classList.remove('manifested');
            cartOverlay.classList.remove('visible');
        } else {
            cartDimension.classList.add('manifested');
            cartOverlay.classList.add('visible');
        }

        Empire.set('cartOpen', !isOpen);
    }

    function addToCart(productId) {
        const products = Empire.get('products');
        const cart = Empire.get('cart');
        const product = products.find(p => p.id === productId);

        if (!product) return;

        const existingItem = cart.find(item => item.id === productId);

        if (existingItem) {
            existingItem.quantity++;
        } else {
            cart.push({ ...product, quantity: 1 });
        }

        Empire.set('cart', [...cart]);
        Renderer.cart();

        showNotification('Añadido al carrito', product.name);

        // Abrir carrito automáticamente
        if (!Empire.get('cartOpen')) {
            toggleCart();
        }
    }

    function removeFromCart(productId) {
        const cart = Empire.get('cart');
        const filtered = cart.filter(item => item.id !== productId);
        Empire.set('cart', filtered);
        Renderer.cart();
    }

    function updateQuantity(productId, delta) {
        const cart = Empire.get('cart');
        const item = cart.find(i => i.id === productId);

        if (!item) return;

        item.quantity += delta;

        if (item.quantity <= 0) {
            removeFromCart(productId);
        } else {
            Empire.set('cart', [...cart]);
            Renderer.cart();
        }
    }

    function filterProducts(category) {
        // Actualizar tabs activos
        document.querySelectorAll('.filter-tab').forEach(tab => {
            tab.classList.remove('active');
            if (tab.textContent.toLowerCase().includes(category.toLowerCase()) ||
                (category === 'all' && tab.textContent === 'Todos')) {
                tab.classList.add('active');
            }
        });

        Empire.set('currentFilter', category);
        Renderer.products(category);
    }

    function scrollToProducts() {
        document.getElementById('productos').scrollIntoView({
            behavior: 'smooth',
            block: 'start'
        });
    }

    function processCheckout() {
        const cart = Empire.get('cart');
        const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

        showNotification('Compra realizada', `Total: $${total.toFixed(2)}`);

        Empire.set('cart', []);
        Renderer.cart();
        toggleCart();
    }

    function toggleWishlist(productId) {
        showNotification('Lista de deseos', 'Producto guardado');
    }

    function quickView(productId) {
        const product = Empire.get('products').find(p => p.id === productId);
        if (product) {
            showNotification('Vista rápida', product.name);
        }
    }

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 8: SISTEMA DE NOTIFICACIONES
    // Notificaciones con animación física
    // ═══════════════════════════════════════════════════════════════════════════════
    function showNotification(title, message) {
        const layer = document.getElementById('notificationLayer');

        const notification = document.createElement('div');
        notification.className = 'notification';
        notification.innerHTML = `
            <div class="notification-icon">
                <svg class="icon" viewBox="0 0 24 24">
                    <polyline points="20 6 9 17 4 12"/>
                </svg>
            </div>
            <div class="notification-content">
                <p class="notification-title">${title}</p>
                <p class="notification-message">${message}</p>
            </div>
        `;

        layer.appendChild(notification);

        // Trigger animation
        requestAnimationFrame(() => {
            notification.classList.add('visible');
        });

        // Auto dismiss
        setTimeout(() => {
            notification.classList.remove('visible');
            setTimeout(() => notification.remove(), 350);
        }, 3000);
    }

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 9: INICIALIZACIÓN DEL SISTEMA
    // Bootstrap del Imperio
    // ═══════════════════════════════════════════════════════════════════════════════
    document.addEventListener('DOMContentLoaded', () => {
        // Inicializar sistema de partículas
        const particleContainer = document.getElementById('particleLayer');
        new ParticleSystem(particleContainer, 20);

        // Renderizar productos
        Renderer.products();
        Renderer.cart();

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && Empire.get('cartOpen')) {
                toggleCart();
            }
        });

        // Log sistema
        console.log(
            '%c⚡ JyC Imperio v60.0 %c Sistema Iniciado ',
            'background: linear-gradient(90deg, #c9a227, #a07d0c); color: #0a0a0b; padding: 8px 12px; font-weight: bold; border-radius: 4px 0 0 4px;',
            'background: #1a1a1e; color: #c9a227; padding: 8px 12px; border-radius: 0 4px 4px 0;'
        );
    });

    // ═══════════════════════════════════════════════════════════════════════════════
    // MÓDULO 10: UTILIDADES MATEMÁTICAS
    // Funciones auxiliares basadas en principios matemáticos
    // ═══════════════════════════════════════════════════════════════════════════════
    const MathUtils = {
        clamp: (value, min, max) => Math.min(Math.max(value, min), max),

        map: (value, inMin, inMax, outMin, outMax) =>
            (value - inMin) * (outMax - outMin) / (inMax - inMin) + outMin,

        randomRange: (min, max) => Math.random() * (max - min) + min,

        goldenRatio: (n) => Math.pow(PHYSICS.PHI, n),

        fibonacci: (n) => {
            if (n <= 1) return n;
            let a = 0, b = 1;
            for (let i = 2; i <= n; i++) {
                [a, b] = [b, a + b];
            }
            return b;
        }
    };

    </script>
</body>
</html>
