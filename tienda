        ======================================== */

        // ========================================
        // 1. CONFIGURATION & STATE
        // ========================================
        const CONFIG = {
            whatsappNumber: '34123456789',
            storeName: 'Mi Tienda',
            currency: '$',
            animationDuration: 600,
            counterDuration: 800,
            debounceDelay: 100
        };

        // Products Data
        const products = [
            { id: 1, name: "Camiseta Premium", category: "Ropa", price: 29.99, originalPrice: 39.99, emoji: "ðŸ‘•", isNew: false },
            { id: 2, name: "Zapatillas Sport", category: "Calzado", price: 89.99, originalPrice: 120.00, emoji: "ðŸ‘Ÿ", isNew: true },
            { id: 3, name: "Reloj Elegante", category: "Accesorios", price: 149.99, originalPrice: 199.99, emoji: "âŒš", isNew: false },
            { id: 4, name: "Mochila Urban", category: "Accesorios", price: 45.99, originalPrice: 59.99, emoji: "ðŸŽ’", isNew: true },
            { id: 5, name: "Auriculares Pro", category: "Tecnologia", price: 79.99, originalPrice: 99.99, emoji: "ðŸŽ§", isNew: true },
            { id: 6, name: "Gafas de Sol", category: "Accesorios", price: 35.99, originalPrice: 49.99, emoji: "ðŸ•¶ï¸", isNew: false },
            { id: 7, name: "Sudadera Comfort", category: "Ropa", price: 49.99, originalPrice: 65.00, emoji: "ðŸ§¥", isNew: false },
            { id: 8, name: "Botella Termica", category: "Hogar", price: 24.99, originalPrice: 34.99, emoji: "ðŸ¶", isNew: true }
        ];

        // State
        let cart = [];
        let currentUser = null;
        let currentFilter = null;
        let countersAnimated = false;

        // ========================================
        // 2. UTILITY FUNCTIONS
        // ========================================

        // Debounce function for performance
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        // Throttle function
        function throttle(func, limit) {
            let inThrottle;
            return function(...args) {
                if (!inThrottle) {
                    func.apply(this, args);
                    inThrottle = true;
                    setTimeout(() => inThrottle = false, limit);
                }
            };
        }

        // Generate unique user ID
        function generateUserId() {
            return Math.floor(100 + Math.random() * 900);
        }

        // Smooth scroll to section
        function scrollToSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                section.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // ========================================
        // 3. INTERSECTION OBSERVER - LAZY LOADING
        // ========================================

        // Check if user prefers reduced motion
        const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

        // Create main intersection observer for sections
        const sectionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');

                    // Trigger child animations
                    const animatedChildren = entry.target.querySelectorAll('.fade-up, .fade-scale, .slide-left, .slide-right');
                    animatedChildren.forEach(child => {
                        child.classList.add('visible');
                    });

                    // Check for counters in stats section
                    if (entry.target.id === 'stats' && !countersAnimated) {
                        animateCounters();
                        countersAnimated = true;
                    }
                }
            });
        }, {
            threshold: 0.15,
            rootMargin: '0px 0px -50px 0px'
        });

        // Observe all lazy sections
        function initLazyLoading() {
            const lazySections = document.querySelectorAll('.lazy-section');
            lazySections.forEach(section => {
                sectionObserver.observe(section);
            });

            // Also observe individual animated elements not in lazy sections
            const heroElements = document.querySelectorAll('.hero .fade-up');
            const heroObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, { threshold: 0.1 });

            heroElements.forEach(el => heroObserver.observe(el));
        }

        // ========================================
        // 4. ANIMATED COUNTERS
        // ========================================

        function animateCounters() {
            if (prefersReducedMotion) {
                // Just show final values without animation
                document.querySelectorAll('.stat-number').forEach(counter => {
                    counter.textContent = counter.dataset.target;
                });
                return;
            }

            const counters = document.querySelectorAll('.stat-number');

            counters.forEach(counter => {
                const target = parseInt(counter.dataset.target);
                const duration = CONFIG.counterDuration;
                const startTime = performance.now();

                function updateCounter(currentTime) {
                    const elapsed = currentTime - startTime;
                    const progress = Math.min(elapsed / duration, 1);

                    // Easing function (easeOutQuart)
                    const easeProgress = 1 - Math.pow(1 - progress, 4);
                    const currentValue = Math.round(easeProgress * target);

                    counter.textContent = currentValue.toLocaleString();

                    if (progress < 1) {
                        requestAnimationFrame(updateCounter);
                    }
                }

                requestAnimationFrame(updateCounter);
            });
        }

        // ========================================
        // 5. SCROLL PROGRESS & HEADER EFFECTS
        // ========================================

        const updateScrollProgress = throttle(() => {
            const scrollProgress = document.getElementById('scrollProgress');
            const header = document.getElementById('mainHeader');
            const scrollTop = window.scrollY;
            const docHeight = document.documentElement.scrollHeight - window.innerHeight;
            const progress = (scrollTop / docHeight) * 100;

            scrollProgress.style.width = `${progress}%`;

            // Header scroll effect
            if (scrollTop > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        }, 16); // ~60fps

        // ========================================
        // 6. USER PERSISTENCE (localStorage)
        // ========================================

        function loadUser() {
            const savedUser = localStorage.getItem('miTiendaUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                showUserInfo();
            }
        }

        function registerUser() {
            const nameInput = document.getElementById('userName');
            const phoneInput = document.getElementById('userPhone');
            const name = nameInput.value.trim();
            const phone = phoneInput.value.trim();

            if (!name) {
                showToast('Por favor ingresa tu nombre', 'error');
                nameInput.focus();
                return;
            }

            currentUser = {
                id: generateUserId(),
                name: name,
                phone: phone,
                registeredAt: new Date().toISOString()
            };

            localStorage.setItem('miTiendaUser', JSON.stringify(currentUser));
            showUserInfo();
            showToast(`Bienvenido ${name}! Tu ID es #${currentUser.id}`);
        }

        function showUserInfo() {
            const form = document.getElementById('registerForm');
            const info = document.getElementById('userInfo');
            const userId = document.getElementById('userId');

            form.style.display = 'none';
            info.style.display = 'block';
            userId.textContent = `#${currentUser.id} - ${currentUser.name}`;
        }

        function logoutUser() {
            localStorage.removeItem('miTiendaUser');
            currentUser = null;

            const form = document.getElementById('registerForm');
            const info = document.getElementById('userInfo');

            form.style.display = 'flex';
            info.style.display = 'none';
            document.getElementById('userName').value = '';
            document.getElementById('userPhone').value = '';

            showToast('Sesion cerrada correctamente');
        }

        // ========================================
        // 7. WHATSAPP DYNAMIC INTEGRATION
        // ========================================

        function generateWhatsAppMessage(context = 'general') {
            let message = `Hola! Vengo desde ${CONFIG.storeName} web.`;

            if (currentUser) {
                message += ` Mi ID de cliente es #${currentUser.id} (${currentUser.name}).`;
            }

            if (context === 'cart' && cart.length > 0) {
                message += '\n\nMe interesan estos productos:\n';
                cart.forEach(item => {
                    message += `- ${item.name} x${item.quantity} ($${(item.price * item.quantity).toFixed(2)})\n`;
                });
                const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
                message += `\nTotal: $${total.toFixed(2)}`;
            }

            return encodeURIComponent(message);
        }

        function openWhatsApp(context = 'general') {
            const message = generateWhatsAppMessage(context);
            const url = `https://wa.me/${CONFIG.whatsappNumber}?text=${message}`;
            window.open(url, '_blank');
        }

        function checkoutWhatsApp() {
            openWhatsApp('cart');
        }

        // ========================================
        // 8. TOAST NOTIFICATIONS
        // ========================================

        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <span class="toast-icon">${type === 'success' ? 'âœ“' : 'âš '}</span>
                <span>${message}</span>
            `;

            container.appendChild(toast);

            // Remove after animation
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // ========================================
        // 9. PRODUCTS RENDERING
        // ========================================

        function renderProducts(filter = null) {
            const grid = document.getElementById('productsGrid');
            let filteredProducts = filter
                ? products.filter(p => p.category === filter)
                : products;

            grid.innerHTML = filteredProducts.map((product, index) => `
                <div class="product-card fade-up stagger-${(index % 4) + 1}">
                    ${product.isNew ? '<span class="product-badge">NUEVO</span>' : ''}
                    <div class="product-image">${product.emoji}</div>
                    <div class="product-info">
                        <span class="product-category">${product.category}</span>
                        <h3 class="product-name">${product.name}</h3>
                        <p class="product-price">
                            ${CONFIG.currency}${product.price.toFixed(2)}
                            <span class="original">${CONFIG.currency}${product.originalPrice.toFixed(2)}</span>
                        </p>
                        <button class="add-to-cart" onclick="addToCart(${product.id})" aria-label="Agregar ${product.name} al carrito">
                            Agregar al Carrito
                        </button>
                    </div>
                </div>
            `).join('');

            // Trigger animations for new elements
            setTimeout(() => {
                grid.querySelectorAll('.fade-up').forEach(el => el.classList.add('visible'));
            }, 100);
        }

        function filterByCategory(category) {
            currentFilter = currentFilter === category ? null : category;
            renderProducts(currentFilter);
            scrollToSection('productos');

            if (currentFilter) {
                showToast(`Mostrando: ${category}`);
            } else {
                showToast('Mostrando todos los productos');
            }
        }

        // ========================================
        // 10. NOVEDADES RENDERING
        // ========================================

        function renderNovedades() {
            const grid = document.getElementById('novedadesGrid');
            const newProducts = products.filter(p => p.isNew);

            grid.innerHTML = newProducts.map((product, index) => `
                <div class="novedad-item fade-up stagger-${index + 1}" onclick="addToCart(${product.id})">
                    <div class="novedad-bg">${product.emoji}</div>
                    <span class="novedad-badge">NUEVO</span>
                </div>
            `).join('');
        }

        // ========================================
        // 11. CART FUNCTIONS
        // ========================================

        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            const existingItem = cart.find(item => item.id === productId);

            if (existingItem) {
                existingItem.quantity++;
            } else {
                cart.push({ ...product, quantity: 1 });
            }

            updateCart();
            animateCartBadge();
            showToast(`${product.name} agregado al carrito`);

            // Save cart to localStorage
            localStorage.setItem('miTiendaCart', JSON.stringify(cart));
        }

        function removeFromCart(productId) {
            const product = cart.find(item => item.id === productId);
            cart = cart.filter(item => item.id !== productId);
            updateCart();
            localStorage.setItem('miTiendaCart', JSON.stringify(cart));

            if (product) {
                showToast(`${product.name} eliminado del carrito`);
            }
        }

        function updateQuantity(productId, change) {
            const item = cart.find(item => item.id === productId);
            if (item) {
                item.quantity += change;
                if (item.quantity <= 0) {
                    removeFromCart(productId);
                } else {
                    updateCart();
                    localStorage.setItem('miTiendaCart', JSON.stringify(cart));
                }
            }
        }

        function updateCart() {
            const cartCount = document.getElementById('cartCount');
            const cartItems = document.getElementById('cartItems');
            const cartTotal = document.getElementById('cartTotal');
            const checkoutBtn = document.getElementById('checkoutBtn');
            const whatsappCheckout = document.getElementById('whatsappCheckout');
            const totalAmount = document.getElementById('totalAmount');

            const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
            cartCount.textContent = totalItems;

            if (cart.length === 0) {
                cartItems.innerHTML = `
                    <div class="empty-cart">
                        <div class="empty-cart-icon">ðŸ›’</div>
                        <p>Tu carrito esta vacio</p>
                    </div>
                `;
                cartTotal.style.display = 'none';
                checkoutBtn.style.display = 'none';
                whatsappCheckout.style.display = 'none';
            } else {
                cartItems.innerHTML = cart.map(item => `
                    <div class="cart-item">
                        <div class="cart-item-image">${item.emoji}</div>
                        <div class="cart-item-info">
                            <p class="cart-item-name">${item.name}</p>
                            <p class="cart-item-price">${CONFIG.currency}${item.price.toFixed(2)}</p>
                            <div class="cart-item-quantity">
                                <button class="qty-btn" onclick="updateQuantity(${item.id}, -1)" aria-label="Reducir cantidad">-</button>
                                <span>${item.quantity}</span>
                                <button class="qty-btn" onclick="updateQuantity(${item.id}, 1)" aria-label="Aumentar cantidad">+</button>
                            </div>
                        </div>
                        <button class="remove-item" onclick="removeFromCart(${item.id})" aria-label="Eliminar ${item.name}">Quitar</button>
                    </div>
                `).join('');

                const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
                totalAmount.textContent = total.toFixed(2);
                cartTotal.style.display = 'block';
                checkoutBtn.style.display = 'block';
                whatsappCheckout.style.display = 'flex';
            }
        }

        function animateCartBadge() {
            const badge = document.getElementById('cartCount');
            badge.classList.remove('bump');
            void badge.offsetWidth; // Trigger reflow
            badge.classList.add('bump');
        }

        function toggleCart() {
            const modal = document.getElementById('cartModal');
            modal.classList.toggle('active');

            // Trap focus in modal when open
            if (modal.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = '';
            }
        }

        function closeCartOnOverlay(event) {
            if (event.target.id === 'cartModal') {
                toggleCart();
            }
        }

        function checkout() {
            const total = document.getElementById('totalAmount').textContent;
            let message = `Gracias por tu compra! Total: ${CONFIG.currency}${total}`;

            if (currentUser) {
                message += `\nCliente: ${currentUser.name} (ID: #${currentUser.id})`;
            }

            showToast(message);
            cart = [];
            updateCart();
            localStorage.removeItem('miTiendaCart');
            toggleCart();
        }

        // ========================================
        // 12. KEYBOARD NAVIGATION
        // ========================================

        document.addEventListener('keydown', (e) => {
            // Close cart with Escape
            if (e.key === 'Escape') {
                const modal = document.getElementById('cartModal');
                if (modal.classList.contains('active')) {
                    toggleCart();
                }
            }
        });

        // ========================================
        // 13. LOAD SAVED CART
        // ========================================

        function loadCart() {
            const savedCart = localStorage.getItem('miTiendaCart');
            if (savedCart) {
                cart = JSON.parse(savedCart);
                updateCart();
            }
        }

        // ========================================
        // 14. MICROINTERACTIONS
        // ========================================

        // Add subtle hover vibration effect to buttons
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('.add-to-cart, .hero-btn, .register-btn, .cart-btn');

            buttons.forEach(button => {
                button.addEventListener('mouseenter', () => {
                    if (!prefersReducedMotion) {
                        button.style.transform = 'translateY(-2px)';
                    }
                });

                button.addEventListener('mouseleave', () => {
                    button.style.transform = '';
                });
            });
        });

        // ========================================
        // 15. INITIALIZATION
        // ========================================

        function init() {
            // Load user data
            loadUser();

            // Load cart
            loadCart();

            // Render products
            renderProducts();

            // Render novedades
            renderNovedades();

            // Initialize lazy loading
            initLazyLoading();

            // Add scroll listener with throttling
            window.addEventListener('scroll', updateScrollProgress, { passive: true });

            // Trigger initial scroll check
            updateScrollProgress();

            // Handle resize with debounce
            window.addEventListener('resize', debounce(() => {
                // Recalculate layouts if needed
            }, 250));

            console.log('Mi Tienda initialized successfully!');
        }

        // Start application
        init();
    </script>
</body>
</html>
